<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:layout_editor_absoluteX="16dp">

    <ImageView
        android:id="@+id/recoWhole"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/card_back"
        android:layout_marginStart="3dp"

        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/recommendedItemPic"
        android:layout_width="145dp"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.288"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/asiafood1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/recommendedItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recommendedItemPic"
        android:layout_alignParentStart="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/ubuntu_mono_bold"
        android:text="Item_name"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/recommStar"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/recommendedItemPic"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recommendedItem"
        app:layout_constraintVertical_bias="0.007"
        app:srcCompat="@drawable/ic_star_black_24dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/RecommendedRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="31dp"
        android:fontFamily="@font/ubuntu_mono"
        android:text="star_value"
        android:textSize="14dp"
        android:layout_toRightOf="@id/recommendedItemPic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recommendedItem"
        app:layout_constraintVertical_bias="0.021"
        tools:ignore="MissingConstraints" />



    <TextView
        android:id="@+id/recommended_deliverytime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recommendedItem"
        android:layout_marginStart="2dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@+id/deliverytextonly"
        android:fontFamily="@font/ubuntu_mono"
        android:text="delivery Time"
        android:textColor="@color/Red"
        />

    <TextView
        android:id="@+id/recommended_deliv_charges"
        android:layout_width="66dp"
        android:layout_height="76dp"
        android:layout_below="@id/recommended_deliverytime"

        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-40dp"
        android:fontFamily="@font/ubuntu_mono"
        android:text="Charges"
        android:textColor="@color/Black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.128"
        tools:ignore="MissingConstraints" />



    <TextView
        android:id="@+id/deliverytextonly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="125dp"
        android:fontFamily="@font/ubuntu_mono_bold"
        android:text="Delivery in:"
        android:textColor="@color/Green"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="9dp">


        <TextView
            android:id="@+id/rupee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="285dp"
            android:layout_marginTop="120dp"
            android:fontFamily="@font/ubuntu_mono"
            android:text="â‚¹"
            android:textColor="@color/White"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/RecommendedPrice"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="120dp"
            android:fontFamily="@font/ubuntu_mono"
            android:text="Price"
            android:textColor="@color/White"
            android:textSize="20dp" />

    </RelativeLayout>











</RelativeLayout>
