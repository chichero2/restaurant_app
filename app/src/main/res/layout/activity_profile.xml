<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.resturent_app.ProfileActivity">


    <Button
        android:id="@+id/Help"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="310dp"
        android:textSize="24dp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@drawable/ic_baseline_help_outline_24"
        android:drawablePadding="-16dp"
        android:fontFamily="@font/roboto_mono"
        android:text="Help"
        android:textAllCaps="false" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profile"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"

        android:layout_marginTop="25dp"
        app:civ_border_width="7dp"

        android:layout_marginRight="25dp" />

    <TextView
        android:id="@+id/profileusername"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:textSize="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:fontFamily="@font/roboto_mono"
        android:textColor="@color/Black"
        android:layout_marginTop="52dp"
        android:text="Username" />

    <Button
        android:id="@+id/profileorder"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="195dp"
        android:textSize="20dp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@drawable/ic_baseline_orderdetails_24"
        android:drawablePadding="2dp"
        android:fontFamily="@font/roboto_mono"
        android:text="Order Details"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/addressdetails"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="252dp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@drawable/ic_baseline_address_24"
        android:fontFamily="@font/roboto_mono"
        android:text="Address Details"
        android:textSize="20dp"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/profilelogout"
        android:layout_width="100dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="291dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="550dp"
        android:background="@drawable/rectangle_5"
        android:fontFamily="@font/roboto_mono"
        android:text="Log Out"
        android:textAllCaps="false" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="186dp"
        android:layout_height="154dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="111dp"
        android:layout_marginBottom="101dp"
        app:srcCompat="@drawable/foodgrazo" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="79dp"
        android:fontFamily="@font/roboto_mono"
        android:text="Food Grazo V1.0"
        android:textColor="@color/Red" />

    <TextView
        android:id="@+id/profileuserEmail"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:textSize="14dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="96dp"
        android:fontFamily="@font/roboto_mono"
        android:textColor="@color/Black"
        android:text="" />

</RelativeLayout>