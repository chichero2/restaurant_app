<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payment_Gateway_activity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="104dp"


        android:fontFamily="@font/roboto_mono"
        android:text="Online Payments"
        android:textColor="@color/Red"
        android:textSize="32sp" />

    <Button
        android:id="@+id/RazorpayButton"
        android:layout_width="381dp"
        android:layout_height="65dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/razrorpaybutton"
        android:fontFamily="@font/roboto_mono"
        android:text="Razorpay"
        android:textAllCaps="false"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/GpayButton"
        android:layout_width="381dp"
        android:layout_height="65dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/gpaybutton"
        android:fontFamily="@font/roboto_mono"
        android:text="Google Pay"
        android:layout_marginLeft="12dp"

        android:textAllCaps="false"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RazorpayButton" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="155dp"
        android:layout_marginLeft="120dp"
        app:srcCompat="@drawable/paymentimage1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="120dp"
        android:layout_height="77dp"
        android:layout_marginLeft="255dp"
        android:layout_marginTop="600dp"
        app:srcCompat="@drawable/secure_payments" />

</RelativeLayout>