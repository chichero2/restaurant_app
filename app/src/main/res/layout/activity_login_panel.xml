<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_page"
    tools:context="com.example.resturent_app.LoginPanelActivity">


    <Button
        android:id="@+id/googleloginbutton"
        android:layout_width="340dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="183dp"
        android:background="@drawable/google_login_page"

        android:fontFamily="@font/roboto_mono"
        android:text="Sign in With Google"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/facebookloginbutton"
        android:layout_width="340dp"
        android:layout_height="62dp"
        android:background="@drawable/facebook_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="108dp"
        android:fontFamily="@font/roboto_mono"
        android:text="Sign in With Facebook"
        android:textAllCaps="false" />
    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebookb"
        android:layout_width="334dp"
        android:layout_height="62dp"
        android:background="@drawable/facebook_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="108dp"
        android:fontFamily="@font/roboto_mono"
        android:text="Sign in With Facebook"
        android:visibility="gone"
        android:textAllCaps="false" />

    <EditText
        android:id="@+id/loginPhone"
        android:layout_width="340dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="233dp"
        android:background="@drawable/phoneedit"
        android:drawableLeft="@drawable/ic_baseline_call_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/roboto_mono"
        android:hint="Phone Number"
        android:inputType="textPhonetic"
        android:padding="15dp" />

    <Button
        android:id="@+id/phonesign"
        android:layout_width="340dp"
        android:layout_height="62dp"
        android:background="@drawable/blacksubmit"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"

        android:layout_marginTop="310dp"
        android:text="Send OTP"
        android:fontFamily="@font/roboto_mono"
        android:textAllCaps="false"
        android:textColor="@color/White"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="270dp"
        android:fontFamily="@font/roboto_mono"
        android:textColor="@color/White"
        android:text="OR" />
</RelativeLayout>